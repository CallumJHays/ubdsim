{
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "firmware/micropython/": true,
    "firmware/esp-idf/": true,
    ".micropy": true,
    "bdsim": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    // "firmware/micropython": true,
    ".micropy": true,
    "bdsim": true
  },
  // don't autoformat in order to stay as close to peter's codebase as possible to make maintenance easier.
  "[python]": {
    "editor.formatOnSave": false
  },
  "python.pythonPath": "/home/cal/.conda/envs/ubdsim/bin/python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.autoComplete.extraPaths": [
    ".micropy/esp32-1.13.0/frozen",
    ".micropy/esp32-1.13.0/stubs",
    ".micropy/ulab",
    ".micropy/ubdsim",
    "src"
  ],
  "python.analysis.extraPaths": [
    ".micropy/esp32-1.13.0/frozen",
    ".micropy/esp32-1.13.0/stubs",
    ".micropy/ulab",
    ".micropy/ubdsim",
    "src"
  ],
  "git.ignoreSubmodules": true,
  "git.detectSubmodules": false
}
